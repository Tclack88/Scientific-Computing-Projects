%!PS
/leaf % xscale yscale angle petal
   {
   /leafcol [ .5 1 .5 ] def
   /ep1 [ 0 0 ] def
   /ep2 [ 0 100 ] def
   /cp1 [ 55 65 ] def
   /cp2 [ 10 95 ] def
   /ap {aload pop} def
   gsave
   leafcol ap setrgbcolor
   0 setlinewidth
   rotate % use angle from stack
   scale % use xscale and yscale from stack

   ep1 ap moveto
   cp1 ap cp2 ap ep2 ap curveto
   cp2 ap exch neg exch
   cp1 ap exch neg exch
   ep1 ap curveto closepath fill

   grestore
   } def

gsave
   306 350 translate

   1 2 80 leaf
   1 2 280 leaf
grestore
